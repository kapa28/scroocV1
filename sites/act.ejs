<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Scrooc: generated</title>
		
		<%- include ("modules/link.ejs") %>

		<!-- dynamic keywords and description -->
		
		<meta property="og:type" content="website">
		<meta property="og:site_name" content="Scrooc">

		<meta name="robots" content="index, follow">
	</head>
	<body onload="loadAct(JSON.parse('<%= JSON.stringify(results) %>'));getReplies(JSON.parse('<%= JSON.stringify(results[0].id) %>'))" >

		<%- include ("modules/head.ejs") %>
		<main id="skip1">
			<div class="container act">
				<div class="post placeholder-ph">
					<div class="meta">
						<div class="op placeholder"></div>
						<div class="date placeholder"></div>
					</div>
					<h2 class="post-title placeholder"></h2>
					<h2 class="topic-title placeholder"></h2>
					<div class="content ph">
						<p class="post-content placeholder"></p>
						<p class="post-content placeholder"></p>
						<p class="post-content placeholder"></p>
					</div>
					
					<div class="attachment-container"></div>
					<div class="social">
						<a class="social-icons placeholder"><div></div></a>
						<a class="social-icons placeholder"><div></div></a>
						<a class="social-icons placeholder"><div></div></a>
						<a class="social-icons placeholder"><div></div></a>
						<a class="social-icons placeholder"><div></div></a>
					</div>
				</div>
			</div>

			<div class="all-reply-container" id="reply">
				<form action="/auth/reply/<%=results[0].id%>/<%=url%>" method="post"> <!--id="reply"-->
                    <h3>Enter a preferred name or autogenerated one: </h3>
					<h3 id="name">
						<input id="username" value="<% if (locals.username) { %><%= username %><% } %>" type="text" name="username" required="required">
					</h3>
                    
                    <h3>Tag someone: </h3> 
                    <input id="tag" type="text" name="tag" value="" readonly>
                    <div class="suggest-pop-up">
                        <div class="suggest-box"></div>
                    </div>
                    <h3>Enter the content: </h3>  
                    <input id="con" type="text" name="con" required="required" minlength="5">
                    <div class="tra">
                        <h3>Enter le honey</h3>
                        <input tabindex="-1" type="text" id="tra" name="tra" value=" ">
                    </div>
					<button class="user-input-btn" type="submit">Make a reply!</button>
                </form>
			</div>

			<div class="load-container reply act-load">
				<button class="load" id="load-replies" onclick="getReplies(JSON.parse('<%= JSON.stringify(results[0].id) %>'))">Load more</button></div>
			<div id="canvas"></div>
		</main>
	</body>
</html> 